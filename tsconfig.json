{
  "include": [
    "./src/**/*",
    "./src/static/fonts/**/*.d.ts",
    "./src/images/**/*.d.ts"
  ],
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@components/*": [
        "/components/*"
      ]
    },
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2017"
    ],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true
  }
}